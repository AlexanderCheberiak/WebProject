@model WebProject.Models.MenuItem

@{
    ViewData["Title"] = Model?.Name ?? "Menu Item";
}

<div class="container my-5">
    
    <div class="text-center mb-5">
        <h1 class="display-4">@Model.Name</h1>
        <p class="lead">From: @Model.Restaurant.Name</p>
    </div>
    
    <div class="row">
        <div class="col-md-6 mb-4">
            <img src="@Model.PhotoUrl" class="img-fluid rounded shadow" alt="@Model.Name">
        </div>
        
        <div class="col-md-6">
            <h3>Description</h3>
            <p>@Model.Description</p>

            <h4 class="mt-4">Price: <span class="text-success fw-bold">@Model.Price.ToString("C")</span></h4>
            
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

</div>

<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050;">
    <div class="card shadow-sm" style="width: 250px;">
        <div class="card-body">
            <h5 class="card-title">Contact Us</h5>
            <p class="card-text mb-1">Phone: +380 123 456 789</p>
            <p class="card-text mb-1">Email: info@example.com</p>
        </div>
    </div>
</div>