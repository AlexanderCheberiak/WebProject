@model WebProject.Models.Restaurant

@{
    ViewData["Title"] = Model?.Name ?? "Restaurant Details";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4">@Model.Name</h1>
        <p class="lead text-muted">@Model.Address</p>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
            {
                <img src="@Model.PhotoUrl" class="img-fluid rounded shadow" alt="@Model.Name">
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center rounded shadow" style="height: 300px;">
                    <span class="text-muted">No Image Available</span>
                </div>
            }
        </div>

        <div class="col-md-6">
            <h3>Description</h3>
            <p>@Model.Description</p>

            <h4 class="mt-4">Location</h4>
            <p>
                Latitude: <strong>@Model.Latitude</strong><br />
                Longitude: <strong>@Model.Longitude</strong>
            </p>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050;">
    <div class="card shadow-sm" style="width: 250px;">
        <div class="card-body">
            <h5 class="card-title">Contact Us</h5>
            <p class="card-text mb-1">Phone: +380 123 456 789</p>
            <p class="card-text mb-1">Email: info@example.com</p>
        </div>
    </div>
</div>